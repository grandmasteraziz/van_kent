{% extends "base.html.twig" %}

 {% block body %}
     <div class="page-header">
         <h2> <small> <h1>Seri İlanlar</h1></small></h2>
     </div>
    <div class="container pull-left">

        <button class="btn btn-default btn-large" data-toggle="modal" data-target="#addData">İlan Ekle</button>


        <!-- Modal -->
        <div class="modal fade" id="addData" tabindex="-1" role="dialog" aria-labelledby="addLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="addLabel">Ekle</h4>
                    </div>


                    <div class="modal-body">
                        <form action="{{ path('seriilan_ekle') }}" method="post">

                            <div class="form-group">
                                <label for="kategori">Kategori:</label>

                                <select class="form-control" id="kategori" name="kategori">

                                    {% for kt in kategoriler %}
                                        <option value="{{ kt.id }}"> {{ kt.adi }}  </option>


                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="adi">Tanım</label>
                                <input type="text" class="form-control" name="adi" id="adi" placeholder="İşin adı" required>
                            </div>

                            <div class="form-group">
                                <label for="aciklama">Açıklama</label>
                                <textarea name="aciklama" id="aciklama" class="form-control" placeholder="Ayrıntıları Yazınız" required></textarea>
                            </div>
                             </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                    </form>
                </div>
            </div>
        </div><!--modal sonu-->
        <p></p>
    </div>
     <!-- modal sonu-->
<br> <br>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Adı</th>
        <th>Açıklama</th>
        <th>Kategori</th>
        <th>İşlemler</th>
    </tr>
    {% for i in ilanlar %}
    <tr>
        <td>{{ i.adi }}</td>
        <td>{{ i.aciklama }}</td>
        <td>{{ i.kategori.adi }}</td>
        <td>
            <a href="{{ path('seriilan_duzenle',{'id':i.id}) }}" class="btn btn-info glyphicon glyphicon-pencil"> Düzenle</a>
            <a href="{{ path('seriilan_sil',{'id':i.id}) }}" class="btn btn-warning glyphicon glyphicon-erase"> Sil</a>
        </td>
    </tr>
    {% endfor %}


 </table>



     <br>   <br>   <br>   <br>

     <a href="{{ path('anasayfa') }}">Anasayfaya  gider</a>





 {% endblock %}
